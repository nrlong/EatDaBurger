<div class="container">
  <div class="background">
    <div class="row">
      <div class="col s12 title">
          <h1>EAT DA BURGER</h1>
      </div>
      <!-- Current Orders -->
      <div class="col s6">
            <div>
              <h2 class="sub-title">Current Orders</h2>
              <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{>burgers/burgers  devoured=true}}
                {{/unless}}
                {{/each}}
              </ul>
            </div>
      </div>
      <!-- Order History -->
      <div class="col s6">
            <div>
              <h2 class="sub-title">Order History</h2>
              <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burgers devoured=false}}
                {{/if}}
                {{/each}}
              </ul>
            </div>
      </div> 
      <!-- Add a new burger -->
      <div class="col s12">
        <form class="burger-form">
              <h3><i class="sub-title far fa-clipboard fa-2x">Order a New Burger</i></h3>
              <div class="form-group">
                <input type="text" id="daNewBurger" name="name" placeholder="Bohemian Radishy Burger">
              </div>

              <button class="btn waves-effect waves-light" type="submit" name="action">Place Order<i class="material-icons right"></i></button>
        </form>
      </div>
    </div>
  </div>
</div>